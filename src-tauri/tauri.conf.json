{
  "$schema": "https://schema.tauri.app/config/2",
  "mainBinaryName": "vr-haptics-player",
  "productName": "vrch-gui",
  "version": "0.0.5",
  "identifier": "com.vrch.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Haptics",
        "width": 1000,
        "height": 600,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "sidecars/vrc-sidecar.exe", 
      "sidecars/bHapticsPlayer/BhapticsPlayer.exe",
      "sidecars/elevated-register.exe",
  "sidecars/listen-for-vrc.dll",
      "security/localhost.crt",
      "security/localhost.key",
      "security/README.md",
      "security/selfsigned_cert.sh",
      "map_configs/**/*.json"
    ]
  }
}
