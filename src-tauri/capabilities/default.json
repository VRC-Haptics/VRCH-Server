{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "http:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://api.github.com/*" },
        { "url": "https://github.com/*" }
      ]
    },
    "store:default",
    "dialog:default",
    "log:default"
  ]
}